{
  "name": "@salmanempowered/react-dnd-scrollzone",
  "version": "3.0.0",
  "description": "A cross browser solution to scrolling during drag and drop.",
  "main": "./index.js",
  "types": "./index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./index.d.ts",
      "module": "./esm/index.js",
      "import": "./esm/index.mjs",
      "default": "./index.js"
    }
  },
  "files": [
    "**"
  ],
  "scripts": {
    "build": "rimraf dist && rollup -c",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'test/**/*.{js,jsx,ts,tsx}'",
    "prettier": "prettier --write '{src,test}/**/*.{ts, tsx}'",
    "lint": "yarn prettier && eslint '{src,test}/**/*.{ts,tsx}'",
    "postbuild": "rimraf dist/tests.d.ts && shx cp -r dist/*.d.ts dist/esm && shx mv dist/* dist && shx cp package.json README.md LICENSE dist && json -I -f dist/package.json -e \"this.private=false; this.devDependencies=undefined; this.optionalDependencies=undefined; this.scripts=undefined; this.prettier=undefined; this.jest=undefined; this['lint-staged']=undefined;\"",
    "publish:alpha": "yarn test && yarn build && npm publish --tag alpha",
    "publish:beta": "yarn test && yarn build && npm publish --tag beta",
    "publish:release": "yarn test && yarn build && npm publish"
  },
  "engines": {
    "node": ">=16"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/salmanempowered/react-dnd-scrollzone"
  },
  "bugs": {
    "url": "https://github.com/salmanempowered/react-dnd-scrollzone/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "react",
    "drag",
    "drop",
    "scroll",
    "dnd",
    "drag and drop",
    "auto"
  ],
  "contributors": [
    "Nicholas Clawson",
    "Vitalii Shvetsov"
  ],
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.19.6",
    "@babel/plugin-transform-react-jsx": "^7.19.0",
    "@babel/preset-env": "^7.19.4",
    "@babel/register": "^7.18.9",
    "@rollup/plugin-babel": "^6.0.2",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^9.0.2",
    "@types/babel-plugin-macros": "^2.8.5",
    "@types/chai": "^4.3.3",
    "@types/lodash.throttle": "^4.1.7",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.9",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "acorn": "^8.8.1",
    "acorn-jsx": "^5.3.2",
    "babel-plugin-macros": "^3.1.0",
    "babel-plugin-tester": "^10.1.0",
    "chai": "^4.3.6",
    "esbuild": "^0.15.13",
    "eslint": "^8.26.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-sonarjs": "^0.16.0",
    "eslint-plugin-unicorn": "^44.0.2",
    "json": "^11.0.0",
    "mocha": "^10.1.0",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dnd": "^16.0.1",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "rollup": "^3.2.5",
    "rollup-plugin-esbuild": "^4.10.1",
    "shx": "^0.3.4",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.1",
    "typescript": "^4.8.4"
  },
  "peerDependencies": {
    "react": "^17.x || 18.x",
    "react-dnd": ">=16.0.1",
    "react-dom": "^17.x || 18.x"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not ie <= 11",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
